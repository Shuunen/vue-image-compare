{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "src",
    "*.js"
  ]
}
